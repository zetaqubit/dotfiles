# Enable compositing (to fix screen tearing).
exec_always --no-startup-id compton --config ~/.config/compton.conf -b

set $win Mod4
set $mod Mod4
set $alt Shift

# font for window titles. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

# change system font.
font pango: Ubuntu Mono 10

# customize title colors to highlight the active window
# class                 border  backgr. text    indicator
client.focused          #3F8AC2 #096BAA #ffffff #00DA8E
client.focused_inactive #333333 #5F676A #ffffff #484e50
client.unfocused        #333333 #424242 #888888 #292d2e
client.urgent           #C10004 #900000 #ffffff #900000

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Disable focus follows mouse (doesn't play well with intellij's popup windows.
focus_follows_mouse no

# start a terminal
#bindsym $win+Return exec i3-sensible-terminal
#bindsym $mod+Return exec gnome-terminal
bindsym $mod+Return exec konsole

# kill focused window
bindsym $mod+d kill

# ------ i3-gaps
# Disable titlebars
for_window [class=".*"] border pixel 1

smart_gaps on
smart_gaps inverse_outer
smart_borders on
smart_borders no_gaps
hide_edge_borders smart_no_gaps
gaps inner 2

# ------ End i3-gaps

#------- Scratchpad
# Make the currently focused window a scratchpad
bindsym $mod+Shift+f move scratchpad

# Show the first scratchpad window
bindsym $mod+f scratchpad show
bindsym $mod+g [class="terminal|konsole"] scratchpad show
bindsym $mod+c [class="chrome"] scratchpad show
#------- End Scratchpad

# start dmenu (a program launcher)
#bindsym $mod+g exec dmenu_run

# start rofi (a program launcher). rofi needs to be installed.
bindsym $mod+space exec "bash -i -c 'rofi -combi-modi window,run -show combi -modi combi'"

# start wifi tray applet. {networkmanager,nm-applet} need to be installed.
exec_always --no-startup-id nm-applet

# start polybar (top bar). polybar needs to be installed.
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# lock screen
exec --no-startup-id cinnamon-screensaver
bindsym Ctrl+Shift+Return exec cinnamon-screensaver-command -l

# change volume
bindsym $mod+F6 exec amixer set Master toggle && amixer set Headphone toggle
bindsym $mod+F7 exec amixer set Master on && amixer set Headphone on && amixer set Master 2-
bindsym $mod+F8 exec amixer set Master on && amixer set Headphone on && amixer set Master 2+

# Media volume controls
bindsym XF86AudioMute exec amixer set Master toggle
bindsym XF86AudioLowerVolume exec amixer set Master on && amixer set Headphone on && amixer set Speaker on && amixer set Master 2-
bindsym XF86AudioRaiseVolume exec amixer set Master on && amixer set Headphone on && amixer set Speaker on && amixer set Master 2+

# Backlight
bindsym XF86MonBrightnessUp exec xbacklight -inc 5
bindsym XF86MonBrightnessDown exec xbacklight -dec 5

# Swap the focus between the 2 monitors.
bindsym $mod+o exec ~/.i3/switch.py

# Go to the last workspace (similar to alt-tab).
bindsym $mod+u workspace back_and_forth

# Swap the current workspaces on the 2 monitors.
bindsym $mod+comma exec ~/.i3/switch.py 'switch'

# Ultrawide: split into virtual displays (via xrandr).
# 880x1440  2560x1440  (aka 16:9 video mode)
bindsym $mod+m exec ~/.config/split_ultrawide.sh 1
# 1720x1440  1720x1440 (aka equal split mode)
bindsym $mod+w exec ~/.config/split_ultrawide.sh 0
# 3440x1440  (aka 21:9 movie mode)
bindsym $mod+v exec ~/.config/split_ultrawide.sh 2


